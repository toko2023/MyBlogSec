@model MyBlog.ViewModels.CreatePostVM

@{
    ViewData["Title"] = "Create Post";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Post">Буцах</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Шинэ нийтлэл</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="Post" asp-area="Admin" enctype="multipart/form-data">
                <div class="row mb-2">
                    <div class="col-9">
                        <div class="mb-2">
                            <label>Гарчиг</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Товч агуулга</label>
                            <input type="text" asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Агуулга</label>
                            <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-2">
                            <img src="~/thumbnails/default_image.svg" class="img-fluid" id="thumbnail" />
                        </div>
                        <div class="mb-2">
                            <label>Зураг</label>
                            <div class="mb-3">
                                <input type="file" asp-for="Thumbnail" class="custom-file" id="custom-file"/>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary w-100">Хадгалах</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".custom-file").on("change", function(){
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
        });
    </script>
}
