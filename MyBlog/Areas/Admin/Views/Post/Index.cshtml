@model List<MyBlog.ViewModels.PostVM>
@{
    ViewData["Title"] = "List Of Posts";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Post" asp-area="Admin" >Шинэ нийтлэл</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Нийтлэлүүд</h4>
        </div>
        <div class="card-body" style="background-color:lightgray;">
            @foreach(var post in Model)
            {
                <div class="rounded mb-4 bg-white p-2">
                    <div class="row">
                        <div class="col-2 d-flex justify-content-center flex-column">
                            @if(post.ThumbnailUrl == null)
                            {
                                <img class="img-fluid" src="~/thumbnails/default_image.svg" style="object-fit:fill; height:100px" />
                            }
                            else
                            {
                                <img class="img-fluid" src="~/thumbnails/@post.ThumbnailUrl" style="object-fit:fill; height:100px" />
                            }

                        </div>
                        <div class="col-5 d-flex justify-content-center flex-column">
                            <h4 style="font-size:1rem;" class="text-primary fw-bold">@post.Title</h4>
                            <p>@post.CreatedDate</p>
                        </div>
                        <div class="col-5 text-right d-flex justify-content-center flex-column">
                            <h4 style="font-size:1rem;" class="text-primary fw-bold">@post.AuthorName</h4>
                            <p>
                                <a class="btn btn-warning">Засах</a>
                                <form asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" method="post" onsubmit="return confirm('Энэ нийтлэлийг устгахыг хүсэж байна уу?')" >
                                    <button type="submit" class="btn btn-danger">Устгах</button>
                                </form>
                            </p>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>

