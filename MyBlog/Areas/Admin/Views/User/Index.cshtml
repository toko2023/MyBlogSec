@model List<MyBlog.ViewModels.UserVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Register" asp-controller="User">Хэрэглэгч нэмэх</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Хэрэглэгчийн бүртгэл</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>Овог нэр</th>
                        <th>Нэр</th>
                        <th>Хэрэглэгчийн нэр</th>
                        <th>Имэйл хаяг</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.Id">Нууц үг өөрчлөх</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
